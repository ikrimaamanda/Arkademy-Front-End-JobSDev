<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".maincontent.hireengineer.DetailEngineerActivity">

        <ScrollView
            android:id="@+id/sv_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_color">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:background="@drawable/bg_white">

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/civ_profile_pict"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/profile_pict"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="30dp"/>

                    <TextView
                        android:id="@+id/tv_full_name"
                        android:text="Ikrima Amanda"
                        android:textColor="@color/black"
                        android:textSize="22sp"
                        android:layout_marginTop="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/civ_profile_pict"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:id="@+id/tv_job_title"
                        android:text="Web Developer"
                        android:textSize="14sp"
                        android:textColor="@color/grey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_full_name"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <ImageView
                        android:id="@+id/iv_location_icon"
                        android:src="@drawable/icon_location"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_job_title"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/tv_location"/>

                    <TextView
                        android:id="@+id/tv_location"
                        android:text="Malang, Jawa Timur"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        app:layout_constraintTop_toTopOf="@id/iv_location_icon"
                        app:layout_constraintStart_toEndOf="@id/iv_location_icon"/>

                    <TextView
                        android:id="@+id/tv_desc"
                        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/iv_location_icon"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="30dp"/>

                    <Button
                        android:id="@+id/btn_hire_engineer"
                        android:text="Hire"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:textAllCaps="false"
                        android:background="@drawable/purple_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tv_desc"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="30dp"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <ImageView
                        android:id="@+id/iv_email_icon"
                        android:src="@drawable/icon_email"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:layout_constraintTop_toBottomOf="@id/btn_hire_engineer"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="50dp"/>

                    <TextView
                        android:id="@+id/tv_email_profile"
                        android:text="email@gmail.com"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="@id/iv_email_icon"
                        app:layout_constraintStart_toEndOf="@id/iv_email_icon"
                        android:layout_marginLeft="20dp"
                        android:textSize="14sp"/>

                    <ImageView
                        android:id="@+id/iv_instagram_icon"
                        android:src="@drawable/instagram_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:layout_constraintTop_toBottomOf="@id/iv_email_icon"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="20dp"/>

                    <TextView
                        android:id="@+id/tv_instagram"
                        android:text="\@ikrima"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="@id/iv_instagram_icon"
                        app:layout_constraintStart_toEndOf="@id/iv_instagram_icon"
                        android:layout_marginLeft="20dp"
                        android:textSize="14sp"/>

                    <ImageView
                        android:id="@+id/iv_github_icon"
                        android:src="@drawable/github_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:layout_constraintTop_toBottomOf="@id/iv_instagram_icon"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="20dp"/>

                    <TextView
                        android:id="@+id/tv_github"
                        android:text="\@ikrima"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="@id/iv_github_icon"
                        app:layout_constraintStart_toEndOf="@id/iv_github_icon"
                        android:layout_marginLeft="20dp"
                        android:textSize="14sp"/>

                    <ImageView
                        android:id="@+id/iv_gitlab_icon"
                        android:src="@drawable/gitlab_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:layout_constraintTop_toBottomOf="@id/iv_github_icon"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="50dp"/>

                    <TextView
                        android:id="@+id/tv_gitlab"
                        android:text="\@ikrima"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="@id/iv_gitlab_icon"
                        app:layout_constraintStart_toEndOf="@id/iv_gitlab_icon"
                        android:layout_marginLeft="20dp"
                        android:textSize="14sp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_skill"
                    android:layout_below="@id/layout_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bg_white">

                    <TextView
                        android:id="@+id/tv_skill"
                        android:text="Skill"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_skill_engineer"
                        android:layout_width="0dp"
                        android:layout_marginTop="20dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tv_skill"
                        app:layout_constraintStart_toStartOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:id="@+id/layout_container"
                    android:layout_below="@id/layout_skill"
                    android:layout_width="match_parent"
                    android:layout_height="700dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:padding="20dp"
                    android:background="@drawable/bg_white"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/tab_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:tabTextColor="@color/black"
                        app:tabIndicatorHeight="3dp" />

                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/view_pager"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </LinearLayout>

            </RelativeLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>