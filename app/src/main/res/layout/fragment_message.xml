<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark">

                <SearchView
                    android:id="@+id/sv_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_white"
                    android:queryHint="Search"
                    android:iconifiedByDefault="false"
                    android:layout_marginHorizontal="40dp"
                    android:layout_marginTop="50dp"
                    />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_below="@id/sv_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:paddingBottom="400dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:background="@drawable/bg_white_chat_screen">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/chat_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        android:padding="5dp"
                        android:layout_marginTop="20dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <com.mikhaellopez.circularimageview.CircularImageView
                            android:id="@+id/civ_profile_pict_1"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/profile_pict"
                            app:civ_border_width="4dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginLeft="80dp"
                            android:padding="10dp"
                            app:layout_constraintStart_toEndOf="@id/civ_profile_pict_1">

                            <TextView
                                android:id="@+id/tv_name_1"
                                android:text="Marinda Yunella"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:textColor="#000"
                                android:textSize="22sp"/>

                            <TextView
                                android:id="@+id/tv_chat_1"
                                android:text="Thanks"
                                android:textColor="@color/grey"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@id/tv_name_1"
                                android:textSize="16sp"
                                android:layout_marginTop="5dp"
                                app:layout_constraintStart_toStartOf="parent"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/chat_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/chat_1"
                        android:padding="5dp"
                        app:layout_constraintStart_toStartOf="parent">

                        <com.mikhaellopez.circularimageview.CircularImageView
                            android:id="@+id/civ_profile_pict_2"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/profile_pict"
                            app:civ_border_width="4dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginLeft="80dp"
                            android:padding="10dp"
                            app:layout_constraintStart_toEndOf="@id/civ_profile_pict_2">

                            <TextView
                                android:id="@+id/tv_name_2"
                                android:text="Alvita Limantara"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:textColor="#000"
                                android:textSize="22sp"/>

                            <TextView
                                android:id="@+id/tv_chat_2"
                                android:text="My pleasure anytime..."
                                android:textColor="@color/grey"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@id/tv_name_2"
                                android:textSize="16sp"
                                android:layout_marginTop="5dp"
                                app:layout_constraintStart_toStartOf="parent"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/chat_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/chat_2"
                        android:padding="5dp"
                        app:layout_constraintStart_toStartOf="parent">

                        <com.mikhaellopez.circularimageview.CircularImageView
                            android:id="@+id/civ_profile_pict_3"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/profile_pict"
                            app:civ_border_width="4dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginLeft="80dp"
                            android:padding="10dp"
                            app:layout_constraintStart_toEndOf="@id/civ_profile_pict_3">

                            <TextView
                                android:id="@+id/tv_name_3"
                                android:text="Ikrima Amanda"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:textColor="#000"
                                android:textSize="22sp"/>

                            <TextView
                                android:id="@+id/tv_job_title_engineer_3"
                                android:text="Tomorrow afternoon..."
                                android:textColor="@color/colorPrimaryDark"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@id/tv_name_3"
                                android:textSize="18sp"
                                android:layout_marginTop="5dp"
                                app:layout_constraintStart_toStartOf="parent"/>

                            <TextView
                                android:id="@+id/vw_small_circle"
                                android:text="1"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:background="@drawable/small_circle"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:gravity="center_vertical"
                                tools:ignore="RtlCompat" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </RelativeLayout>

        </ScrollView>

</layout>