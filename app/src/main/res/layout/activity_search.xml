<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".search.SearchActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RelativeLayout
            android:layout_gravity="top"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp">

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_back"
                    android:layout_marginLeft="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:id="@+id/tv_title"
                    android:text="Search"
                    android:textStyle="bold"
                    android:textSize="32sp"
                    android:textColor="@color/white"
                    android:layout_alignLeft="@id/iv_back"
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/iv_back"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <ImageView
                    android:id="@+id/iv_notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tv_title"
                    android:src="@drawable/ic_notification"
                    android:layout_marginLeft="150dp"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <SearchView
                android:id="@+id/sv_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white"
                android:queryHint="Search"
                android:iconifiedByDefault="false"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="50dp"
                android:layout_below="@id/layout_back"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_below="@id/sv_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="50dp"
                android:paddingBottom="100dp"
                android:paddingLeft="20dp"
                android:background="@drawable/bg_white_search_screen">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/engineer_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_white"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="50dp"
                    app:layout_constraintStart_toStartOf="parent">

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/civ_profile_pict"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/profile_pict"
                        app:civ_border_width="4dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginLeft="110dp"
                        android:paddingHorizontal="10dp"
                        app:layout_constraintStart_toEndOf="@id/civ_profile_pict">

                        <TextView
                            android:id="@+id/tv_name"
                            android:text="Marinda Yunella"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:textColor="#000"
                            android:textSize="18sp"/>

                        <TextView
                            android:id="@+id/tv_job_title_engineer_1"
                            android:text="Web Developer"
                            android:textColor="@color/grey"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/tv_name"
                            android:textSize="16sp"
                            android:layout_marginTop="5dp"
                            app:layout_constraintStart_toStartOf="parent"/>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            app:layout_constraintTop_toBottomOf="@id/tv_job_title_engineer_1"
                            app:layout_constraintStart_toStartOf="parent">

                            <TextView
                                android:id="@+id/tv_skill_kotlin"
                                android:text="Kotlin"
                                android:textSize="12sp"
                                android:padding="10dp"
                                android:background="@drawable/bg_orange"
                                android:textColor="@color/white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent" />

                            <TextView
                                android:id="@+id/tv_skill_Java"
                                android:text="Java"
                                android:textSize="12sp"
                                android:padding="10dp"
                                android:background="@drawable/bg_orange"
                                android:textColor="@color/white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toEndOf="@id/tv_skill_kotlin"
                                android:layout_marginLeft="10dp" />

                            <TextView
                                android:id="@+id/tv_skill_laravel"
                                android:text="Laravel"
                                android:textSize="12sp"
                                android:padding="10dp"
                                android:background="@drawable/bg_orange"
                                android:textColor="@color/white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toEndOf="@id/tv_skill_Java"
                                android:layout_marginLeft="10dp" />

                            <TextView
                                android:id="@+id/tv_count_skills"
                                android:text="3+"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintStart_toEndOf="@id/tv_skill_laravel"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:layout_marginLeft="10dp"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>


                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/engineer_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_white"
                    app:layout_constraintTop_toBottomOf="@id/engineer_1"
                    android:layout_marginTop="20dp"
                    app:layout_constraintStart_toStartOf="parent">

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/civ_profile_pict_engineer2"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/profile_pict"
                        app:civ_border_width="4dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginLeft="110dp"
                        android:paddingHorizontal="10dp"
                        app:layout_constraintStart_toEndOf="@id/civ_profile_pict_engineer2">

                        <TextView
                            android:id="@+id/tv_name_engineer_2"
                            android:text="Alvita Limantara"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:textColor="#000"
                            android:textSize="18sp"/>

                        <TextView
                            android:id="@+id/tv_job_title_engineer_2"
                            android:text="Web Developer"
                            android:textColor="@color/grey"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/tv_name_engineer_2"
                            android:textSize="16sp"
                            android:layout_marginTop="5dp"
                            app:layout_constraintStart_toStartOf="parent"/>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            app:layout_constraintTop_toBottomOf="@id/tv_job_title_engineer_2"
                            app:layout_constraintStart_toStartOf="parent">

                            <TextView
                                android:id="@+id/tv_skill_kotlin_2"
                                android:text="Kotlin"
                                android:textSize="12sp"
                                android:padding="10dp"
                                android:background="@drawable/bg_orange"
                                android:textColor="@color/white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent" />

                            <TextView
                                android:id="@+id/tv_skill_Java_2"
                                android:text="Java"
                                android:textSize="12sp"
                                android:padding="10dp"
                                android:background="@drawable/bg_orange"
                                android:textColor="@color/white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toEndOf="@id/tv_skill_kotlin_2"
                                android:layout_marginLeft="10dp" />

                            <TextView
                                android:id="@+id/tv_skill_laravel_2"
                                android:text="Laravel"
                                android:textSize="12sp"
                                android:padding="10dp"
                                android:background="@drawable/bg_orange"
                                android:textColor="@color/white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toEndOf="@id/tv_skill_Java_2"
                                android:layout_marginLeft="10dp" />

                            <TextView
                                android:id="@+id/tv_count_skills_2"
                                android:text="3+"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintStart_toEndOf="@id/tv_skill_laravel_2"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:layout_marginLeft="10dp"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>


                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/engineer_android_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_white"
                    app:layout_constraintTop_toBottomOf="@id/engineer_2"
                    android:layout_marginTop="20dp"
                    app:layout_constraintStart_toStartOf="parent">

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/civ_profile_pict_engineer_android_1"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/profile_pict"
                        app:civ_border_width="4dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginLeft="110dp"
                        android:paddingHorizontal="10dp"
                        app:layout_constraintStart_toEndOf="@id/civ_profile_pict_engineer_android_1">

                        <TextView
                            android:id="@+id/tv_name_engineer_android"
                            android:text="Ikrima Amanda"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:textColor="#000"
                            android:textSize="18sp"/>

                        <TextView
                            android:id="@+id/tv_job_title_engineer_android"
                            android:text="Android Developer"
                            android:textColor="@color/grey"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/tv_name_engineer_android"
                            android:textSize="16sp"
                            android:layout_marginTop="5dp"
                            app:layout_constraintStart_toStartOf="parent"/>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            app:layout_constraintTop_toBottomOf="@id/tv_job_title_engineer_android"
                            app:layout_constraintStart_toStartOf="parent">

                            <TextView
                                android:id="@+id/tv_skill_kotlin_3"
                                android:text="Kotlin"
                                android:textSize="12sp"
                                android:padding="10dp"
                                android:background="@drawable/bg_orange"
                                android:textColor="@color/white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent" />

                            <TextView
                                android:id="@+id/tv_skill_Java_3"
                                android:text="Java"
                                android:textSize="12sp"
                                android:padding="10dp"
                                android:background="@drawable/bg_orange"
                                android:textColor="@color/white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toEndOf="@id/tv_skill_kotlin_3"
                                android:layout_marginLeft="10dp" />

                            <TextView
                                android:id="@+id/tv_skill_laravel_3"
                                android:text="Laravel"
                                android:textSize="12sp"
                                android:padding="10dp"
                                android:background="@drawable/bg_orange"
                                android:textColor="@color/white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toEndOf="@id/tv_skill_Java_3"
                                android:layout_marginLeft="10dp" />

                            <TextView
                                android:id="@+id/tv_count_skills_3"
                                android:text="3+"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintStart_toEndOf="@id/tv_skill_laravel_3"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:layout_marginLeft="10dp"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>


                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>




            </androidx.constraintlayout.widget.ConstraintLayout>

        </RelativeLayout>

    </ScrollView>

    <!--        bottom nav bar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/foot_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="15dp"
        android:background="@drawable/bg_foot_bar">

        <ImageView
            android:id="@+id/iv_home_icon"
            android:src="@drawable/icon_home"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/iv_search_icon"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/iv_search_icon"
            android:src="@drawable/search_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_home_icon"
            app:layout_constraintEnd_toStartOf="@id/iv_chat_icon"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/iv_chat_icon"
            android:src="@drawable/chat_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_search_icon"
            app:layout_constraintEnd_toStartOf="@id/iv_account_icon"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/iv_account_icon"
            android:src="@drawable/account_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_chat_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>